<?xml version="1.0"?>
<!-- map : gets used inside controls -->
<!-- control : gets used inside sequences -->
<!-- sequence : can take argument list like seq:arg0:arg1:arg2 -->
<root>
  <map>
    <name>onoff</name>
    <doc>assertive high map for on/off</doc>
    <params on="1" off="0"></params>
  </map>
  <map>
    <name>onoff_i</name>
    <doc>assertive low map for on/off</doc>
    <params on="0" off="1"></params>
  </map>
  <map>
    <name>yesno</name>
    <doc>assertive high map for yes/no</doc>
    <params yes="1" no="0"></params>
  </map>
  <map>
    <name>yesno_i</name>
    <doc>assertive low map for yes/no</doc>
    <params yes="0" no="1"></params>
  </map>
  <map>
    <name>press</name>
    <doc>map for press and release of buttons</doc>
    <params press="0" release="1"></params>
  </map>
  <!-- UART -->
  <control>
    <name>cpu_uart_pty</name>
    <doc>Psuedo-terminal (pty) thats connected to CPU's uart console</doc>
    <params cmd="get" interface="2" subtype="pty" drv="uart"></params>
  </control>
  <!-- GPIOS -->
  <control>
    <name>gpio0</name>
    <doc>gpio0.  Can be chosen by developer to be one of 6 gpios by shorting
    pins on header J1</doc>
    <params interface="1" drv="gpio" offset="0" map="onoff"></params>
  </control>
  <control>
    <name>gpio1</name>
    <doc>gpio1.  Can be chosen by developer to be one of 6 gpios by shorting
    pins on header J2</doc>
    <params interface="1" drv="gpio" offset="1" map="onoff"></params>
  </control>
  <control>
    <name>pwr_button</name>
    <doc>power button gpio</doc>
    <params interface="1" drv="gpio" offset="2" map="press"></params>
  </control>
  <control>
    <name>lid_open</name>
    <doc>lid open gpio</doc>
    <params interface="1" drv="gpio" offset="3" map="yesno"></params>
  </control>
  <sequence>
    <name>bogus</name>
    <params cmdlist="">
    </params>
  </sequence>
</root>
